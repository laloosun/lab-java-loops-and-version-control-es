public class Main {
    public static void main(String[] args) {
        // Initialize the array for both tasks
        int[] array = {10, 5, 8, 2, 15, 7};

        // Task 1: Find the difference between the largest and smallest values
        int difference = findDifference(array);
        System.out.println("Task 1: The difference between the largest and smallest values is: " + difference);

        // Task 2: Find the smallest and second smallest elements and print them
        findTwoSmallest(array);

        // Example for calculating the difference between the largest and smallest values
        int[] exampleArray = {10, 5, 8, 2, 15};
        int exampleDifference = calculateDifference(exampleArray);
        System.out.println("Example: The difference between the largest and smallest values is: " + exampleDifference);

        // Example for calculating an expression
        int x = 3;
        int y = 5;
        int result = calculateExpression(x, y);
        System.out.println("Example: Result of the expression is: " + result);
    }

    // Task 1: Find the difference between the largest and smallest values
    public static int findDifference(int[] array) {
        // Check if the array has at least 1 element
        if (array.length < 1) {
            throw new IllegalArgumentException("Array must have at least 1 element");
        }

        // Initialize min and max to the first element
        int min = array[0];
        int max = array[0];

        // Iterate through the array to find the min and max
        for (int i = 1; i < array.length; i++) {
            // If the current element is smaller than the current min, update min
            if (array[i] < min) {
                min = array[i];
            }
            // If the current element is larger than the current max, update max
            if (array[i] > max) {
                max = array[i];
            }
        }

        // Calculate and return the difference
        return max - min;
    }

    // Task 2: Find the smallest and second smallest elements and print them
    public static void findTwoSmallest(int[] array) {
        // Check if the array has less than 2 elements
        if (array.length < 2) {
            System.out.println("Task 2: Array length is less than 2");
            return;
        }

        // Initialize the smallest and secondSmallest variables to the maximum possible integer value
        int smallest = Integer.MAX_VALUE;
        int secondSmallest = Integer.MAX_VALUE;

        // Iterate through the array
        for (int num : array) {
            // If the current number is smaller than the current smallest value
            if (num < smallest) {
                // Update the secondSmallest to the current smallest value
                secondSmallest = smallest;
                // Update the smallest to the current number
                smallest = num;
            }
            // If the current number is not equal to the current smallest value and is smaller than the current secondSmallest value
            else if (num < secondSmallest && num != smallest) {
                // Update the secondSmallest to the current number
                secondSmallest = num;
            }
        }

        // Print the smallest and second smallest elements
        System.out.println("Task 2: Smallest element: " + smallest);
        System.out.println("Task 2: Second smallest element: " + secondSmallest);
    }

    // Method to calculate the difference between the largest and smallest values in an array
    public static int calculateDifference(int[] array) {
        // Initialize variables for the maximum and minimum values
        int max = array[0];
        int min = array[0];

        // Find the maximum and minimum values in the array
        for (int num : array) {
            if (num > max) {
                max = num;
            }
            if (num < min) {
                min = num;
            }
        }

        // Calculate the difference and return it
        return max - min;
    }

    public static int calculateExpression(int x, int y) {
        int firstPart = x * x;
        int secondPart = ((4 * y) / 5) - x;
        int result = firstPart + (secondPart * secondPart);

        return result;
    }
}
